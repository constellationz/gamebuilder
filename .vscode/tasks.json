{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Place",
			"type": "shell",
			"command": "rojo build -o place.rbxlx",
			"problemMatcher": []
		},
		{
			"label": "Export Models",
			"type": "shell",
			"command": "remodel run export",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build",
			"dependsOn": [
				"Export Models",
				"Compile Place"
			],
			"problemMatcher": []
		},
		{
			"label": "Serve",
			"type": "shell",
			"command": "rojo serve",
			"problemMatcher": []
		},
		{
			"label": "Open Place",
			"type": "shell",
			"command": "",
			"windows": {
				"command": "explorer \\select,\"place.rbxlx\""
			},
			"problemMatcher": []
		},
		{
			"label": "Check Code",
			"type": "shell",
			"command": "selene src",
			"problemMatcher": []
		},
		{
			"label": "Install Foreman",
			"type": "shell",
			"command": "cargo install foreman",
			"problemMatcher": []
		},
		{
			"label": "Install Tools",
			"type": "shell",
			"command": "foreman install",
			"problemMatcher": []
		},
		{
			"label": "Pull Submodules",
			"type": "shell",
			"command": "git submodule update --init --recursive",
			"problemMatcher": []
		}
	]
}